{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,

		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "ES2017",

		"lib": ["dom", "dom.iterable", "esnext"],
		"plugins": [{ "name": "next" }],

		"paths": {
			"@/*": ["./src/*"]
		}
	},

	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
